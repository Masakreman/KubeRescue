apiVersion: remediation.kuberescue.io/v1alpha1
kind: LogRemediation
metadata:
  name: test1-db-error-remediation
spec:
  sources:
  - type: deployment
    selector:
      name: test1-db-error-remediation
  elasticsearchConfig:
    host: localhost
    port: 9200
    index: kubernetes-logs
  remediationRules:
  - errorPattern: "CRITICAL_DB_CONNECTION_FAILED"
    action: restart
    cooldownPeriod: 60